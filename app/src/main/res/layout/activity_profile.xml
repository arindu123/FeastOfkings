<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Orange Header -->

    <!-- Bottom Navigation Bar - MOVED UP AND FIXED -->

    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/offwhite"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Status Bar Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Header with Back Button and Title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="20dp"
            android:visibility="visible">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Back button"
                android:src="@drawable/back_grey" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="My profile"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Profile Picture Container -->
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp">

            <!-- Profile Picture -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="105dp"
                android:layout_height="107dp"
                android:src="@drawable/profile2"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="4dp" />

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/btn_edit_profile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="Edit profile picture"
                android:padding="6dp"
                android:src="@drawable/ic_edit" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:background="@color/orange"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        android:gravity="center">

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/homeicon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/homepage"
            app:tint="@color/white" />

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/searchicon1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/searchicon1"
            app:tint="@color/white" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileicon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/profileicon"
            app:tint="@color/white" />

        <!-- Cart Icon -->
        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/carticon"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Main Content Container - POSITIONED BETWEEN HEADER AND BOTTOM NAV -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_section"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginTop="-4dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/offwhite"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp">

            <!-- Full Name Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Full Name"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/syellow"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:text="Semal Amarajewa"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Date of Birth + Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Date of Birth"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_date_of_birth"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/syellow"
                        android:clickable="true"
                        android:focusable="false"
                        android:inputType="date"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:text="09 / 10 / 2002"
                        android:textColor="#333333"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Email"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/syellow"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:text="amarajewa355@gmail.com"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Phone Number Field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Phone Number"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/syellow"
                    android:inputType="phone"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:text="+94 774254139"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Update Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_profile"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="Update Profile"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/orange"
                android:elevation="4dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>