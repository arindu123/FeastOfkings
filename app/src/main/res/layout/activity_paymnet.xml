<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="#F5C842"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Payment"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Main Scroll Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Shipping Address Section -->
            <LinearLayout
                android:id="@+id/shipping_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_shipping_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping Address"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_shipping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="161, Awissawella Road, Mipe, Padukka"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- Order Summary Section -->
            <LinearLayout
                android:id="@+id/order_summary_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tv_order_summary_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:textColor="#333333"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_edit_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="6dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="Edit"
                        android:textColor="#FF6B35"
                        android:textSize="14sp" />

                </RelativeLayout>

                <!-- Order Items -->
                <LinearLayout
                    android:id="@+id/order_items_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_hamburger_beef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hamburger (Beef) - 1 item"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                    <TextView
                        android:id="@+id/item_hamburger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hamburger - 1 item"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                    <TextView
                        android:id="@+id/item_sandwich"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sandwich - 1 item"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Payment Method Section -->
            <LinearLayout
                android:id="@+id/payment_method_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_payment_method_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/card"
                        app:tint="@color/orange" />

                    <TextView
                        android:id="@+id/tv_card_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Credit Card"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="**** **** 43 /00 /000"
                        android:textColor="#FF6B35"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Delivery Time Section -->
            <LinearLayout
                android:id="@+id/delivery_time_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_delivery_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Time"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_estimated_delivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estimated Delivery"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_delivery_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40 mins"
                        android:textColor="#FF6B35"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- Pay Now Button -->
            <Button
                android:id="@+id/btnPayNow"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/orange"
                android:text="Pay now"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
